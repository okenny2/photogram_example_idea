<!-- Validation failure messages -->

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Comment #<%= @comment.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_comment/<%= @comment.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for photo_id -->
          <div class="form-group">
            <label for="photo_id" class="col-sm-2 control-label">
              Photo
            </label>
            <div class="col-sm-10">
              <input type="text" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @comment.photo_id %>">
            </div>
          </div>

          <!-- Label and input for body -->
          <div class="form-group">
            <label for="body" class="col-sm-2 control-label">
              Body
            </label>
            <div class="col-sm-10">
              <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @comment.body %></textarea>
            </div>
          </div>

          <!-- Label and input for commenter_id -->
          <div class="form-group">
            <label for="commenter_id" class="col-sm-2 control-label">
              Commenter
            </label>
            <div class="col-sm-10">
              <input type="text" id="commenter_id" name="commenter_id" placeholder="Commenter" class="form-control" value="<%= @comment.commenter_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Comment
              </button>
              or
              <a href="/comments/<%= @comment.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
